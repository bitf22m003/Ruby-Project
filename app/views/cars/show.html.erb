<h2><%= @car.name %> - <%= @car.brand %></h2>

<% if @car.image.attached? %>
  <%= image_tag @car.image, style: "width: 100%; max-height: 400px; object-fit: cover;" %>
<% end %>

<p><strong>Price:</strong> Rs. <%= @car.price %></p>
<p><strong>Model Year:</strong> <%= @car.model_year %></p>
<p><strong>Availability:</strong> <%= @car.availability ? "Available" : "Not Available" %></p>

<% if @car.availability %>
  <%= button_to "Confirm Booking", bookings_path(car_id: @car.id), method: :post, class: "btn btn-primary" %>
<% else %>
  <button class="btn btn-secondary" disabled>Not Available</button>
<% end %>
