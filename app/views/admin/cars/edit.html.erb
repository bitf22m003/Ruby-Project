<div class="container justify-content-between mt-4 mb-5 my-4">
  <div class="d-flex justify-content-between align-items-center mb-2 ">
  <div class="flex-grow-1 text-center">
    <h2 class="mb-4 mt-2">Edit Car</h2>
  </div>
  <div class="me-4">
    <%= link_to "Go to Dashboard", admin_dashboard_path, class: "btn btn-outline-primary" %>
  </div>
</div>

  <div class="card shadow p-4" style="max-width: 600px; margin: 0 auto;">
    <%= form_with model: [:admin, @car], local: true do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :brand, class: "form-label" %>
        <%= form.text_field :brand, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :model_year, class: "form-label" %>
        <%= form.number_field :model_year, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :price, class: "form-label" %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= form.check_box :availability, class: "form-check-input" %>
        <%= form.label :availability, class: "form-check-label" %>
      </div>

      <div class="mb-4">
        <%= form.label :image, "Car Image", class: "form-label" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        
        <%= form.submit "Update Car", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_cars_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
