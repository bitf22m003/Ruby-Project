<div class="d-flex justify-content-between align-items-center mb-2">
  <div class="flex-grow-1 text-center">
    <h2 class="mb-4 mt-4">Add Car</h2>
  </div>
  <div class="me-4">
    <%= link_to "Go to Dashboard", admin_dashboard_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<div class="col-md-7 justify-content-between mx-auto">
  <div class="card shadow p-4 mb-5">
    <%= form_with model: [:admin, @car], local: true, html: { multipart: true } do |form| %>

      <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Car name", required: true, pattern: "[A-Za-z0-9 ]+" %>
      </div>

      <div class="mb-3">
        <%= form.label :brand %>
        <%= form.text_field :brand, class: "form-control", placeholder: "Enter brand name", required: true, pattern: "[A-Za-z ]+" %>
      </div>

      <div class="mb-3">
        <%= form.label :model_year %>
        <%= form.number_field :model_year, class: "form-control", placeholder: "Enter model year", required: true, min: 1990, max:  Date.current.year  %>
      </div>

      <div class="mb-3">
        <%= form.label :price, "Rent Price (per day)" %>
        <%= form.number_field :price, class: "form-control", placeholder: "Enter rent price per day", required: true, min: 1 %>
      </div>

      <div class="mb-3">
        <%= form.label :availability %><br>
        <%= form.check_box :availability %> Available
      </div>

      <div class="mb-3">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Create Car", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_dashboard_path, class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>
