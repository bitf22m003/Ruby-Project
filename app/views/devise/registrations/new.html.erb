<%= devise_error_messages! %>

<h2>Sign up</h2>

<div class="container">
  <div class="signup-container">
    <h3 class="text-center mb-4">Create an Account</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>

      <!-- Name (only alphabets allowed) -->
      <div class="mb-3">
        <%= f.label :name, "Full Name", class: "form-label" %>
        <%= f.text_field :name,
              class: "form-control",
              placeholder: "Enter your full name",
              pattern: "[A-Za-z ]+",
              title: "Only alphabets allowed",
              required: true %>
      </div>

      <!-- Email (must be @gmail.com) -->
      <div class="mb-3">
        <%= f.label :email, "Email address", class: "form-label" %>
        <%= f.email_field :email,
              class: "form-control",
              placeholder: "Enter email",
              required: true,
              pattern: "[a-zA-Z0-9._%+-]+@gmail\\.com",
              title: "Only @gmail.com email addresses are allowed" %>
      </div>

      <!-- Phone (exactly 11 digits) -->
      <div class="mb-3">
        <%= f.label :phone, "Phone Number", class: "form-label" %>
        <%= f.telephone_field :phone,
              class: "form-control",
              placeholder: "Enter phone number",
              required: true,
              maxlength: 11,
              pattern: "\\d{11}",
              title: "Enter exactly 11 digits" %>
      </div>

      <!-- Address (cannot be empty) -->
      <div class="mb-3">
        <%= f.label :address, "Address", class: "form-label" %>
        <%= f.text_field :address,
              class: "form-control",
              placeholder: "Enter address",
              required: true %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password,
              class: "form-control",
              placeholder: "Create a password",
              minlength: 6,
              title: "Minimum 6 characters",
              required: true %>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation,
              class: "form-control",
              placeholder: "Confirm password",
              required: true %>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-primary w-100" %>

    <% end %>

    <div class="mt-3 text-center">
      Already have an account? <%= link_to "Sign In", new_user_session_path %>
    </div>
  </div>
</div>
