
  <%= render 'shared/navbar' %>

  <!-- Hero Section -->
  <div class="hero-page">
    <div class="hero-headlines">
      <h1>Easy And Fast Way To <b class="accent">Rent</b> A Car with MetroRide.</h1>
      <p>We offer a wide extend of rental cars to suit your needs. Whether you are arranging a weekend travel or a business trip.</p>
      <button class="btn-2 btn-hero" onclick="window.location.href='<%= contact_path %>'">Get Started</button>
      <div class="download-buttons">
        <%= image_tag 'img/app_store_img.png', alt: 'App Store' %>
        <%= image_tag 'img/google_play_img.png', alt: 'Google Play' %>
      </div>
    </div>
    <%= image_tag 'img/hero_img.png', class: 'hero-page-img', alt: 'Hero Image' %>
  </div>

  <!-- About Section -->
  <section class="about" id="about">
    <div class="about-container">
      <h1>Your Premier Choice For Effortless Car Rentals</h1>
      <p class="about-subline">Experience the ultimate convenience with MetroRide, where renting a car is as Easy as a few clicks.</p>
      <div class="about-info">
        <div class="about-info-item">
          <hr class="about-hr" />
          <%= image_tag 'img/about-info-item-1.png', alt: 'Efficiency' %>
          <h5>Efficiency</h5>
          <p>MetroRide stands out for its streamlined rental process, ensuring customers can quickly and easily book their desired vehicles.</p>
        </div>
        <div class="about-info-item">
          <hr class="about-hr" />
          <%= image_tag 'img/about-info-item-2.png', alt: 'Diverse Fleet' %>
          <h5>Diverse Fleet</h5>
          <p>MetroRide boasts a Diverse Fleet of well-maintained vehicles, catering to the varied needs and preferences of its customers.</p>
        </div>
        <div class="about-info-item">
          <hr class="about-hr" />
          <%= image_tag 'img/about-info-item-3.png', alt: 'Exceptional Services' %>
          <h5>Exceptional services</h5>
          <p>Beyond just providing vehicles, MetroRide is committed to delivering Exceptional customer services at every touch point.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Collection Section -->
  <section class="collection" id="collection">
    <h1>Our Car Collections</h1>
    <div class="collection-container">
      <% cars = [
        { image: 'cars/car-1.png', price: '$80.00', location: 'California', name: 'Mercedes-AMG GT R' },
        { image: 'cars/car-2.png', price: '$60.00', location: 'Los Angeles', name: 'BMW 428i - F32' },
        { image: 'cars/car-3.png', price: '$40.00', location: 'California', name: 'Toyota 86 - Coupe' },
        { image: 'cars/car-4.png', price: '$40.00', location: 'New York', name: '2018 Lexus' },
        { image: 'cars/car-5.png', price: '$100.00', location: 'Las Vegas', name: 'Rolls Royce Dawn' },
        { image: 'cars/car-6.png', price: '$100.00', location: 'New Jersey', name: 'Lamborghini Venemo' }
      ] %>

      <% cars.each do |car| %>
        <div class="collection-car-item">
        <%= image_tag("img/#{car[:image]}", alt: car[:name], class: "car-image") %>

          <div class="car-info-container">
            <div class="car-info">
              <div class="car-price">
                <h5><%= car[:price] %></h5>
                <h6>/Day</h6>
              </div>
              <div class="car-location">
                <i class="fa-solid fa-location-dot"></i>
                <h6><%= car[:location] %></h6>
              </div>
            </div>
            <h2><%= car[:name] %></h2>
            <button class="btn-2 btn-car" onclick="window.location.href='<%= contact_path %>'">
              <span>Book Now</span>
              <i class="fa-solid fa-phone"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <button class="btn-car btn-herocar" onclick="window.location.href='<%= collection_path %>'">
      <span>Check Our Cars</span>
      <i class="fa-solid fa-arrow-right-long"></i>
    </button>
  </section>

  <!-- Review Section -->
  <section class="review" id="review">
    <h1>Hear what our clients say</h1>
    <div class="review-container">
      <% reviews = [
        { text: "Renting with MetroRide was an absolute breeze! From booking online to picking up the car, everything was smooth and efficient.", name: "Sarah H.", image: "testimonials-1.png" },
        { text: "I can't recommend MetroRide enough! Their diverse fleet allowed me to choose the perfect car for my weekend gateway.", name: "Michael T.", image: "testimonials-2.png" },
        { text: "MetroRide exceeded all my expectations! Their flexibility with drop-off and pickup made my travel experience stress-free.", name: "William A.", image: "testimonials-3.png" }
      ] %>

      <% reviews.each do |review| %>
        <div class="review-item">
          <p><b class="accent">MetroRide</b> <%= review[:text] %></p>
          <div class="review-people">
          <%= image_tag "img/#{review[:image]}", alt: review[:name] %>

            <h5><%= review[:name] %></h5>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <%= render 'shared/footer' %>
